---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/x-icon" href="/asuri.png" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  <style>
    .svg-container {
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .svg-container svg {
      max-width: 100%;
      max-height: 100%;
    }
  </style>
</head>
<nav class="bg-white border-b border-gray-200  dark:bg-gray-900 dark:border-gray-700">
  <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between h-16">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <button id="hamburger-button" type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex-shrink-0">
          <img class="h-8 w-auto" src="/asuri.png" alt="Logo">
        </div>
        <div class="hidden sm:block sm:ml-6">
          <div class="flex space-x-4">
            <a href="/" class={title == "Home" ? "bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium" : "text-gray-900 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium dark:text-white dark:hover:bg-gray-600 dark:hover:text-gray-200"}>Home</a>
            <a href="/pr" class={title == "Power Rankings" ? "bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium" : "text-gray-900 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium dark:text-white dark:hover:bg-gray-600 dark:hover:text-gray-200"}>Power Rankings</a>
            <a href="/esports" class={title == "eSports Database" ? "bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium" : "text-gray-900 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium dark:text-white dark:hover:bg-gray-600 dark:hover:text-gray-200"}>eSports Database</a>
            <a href="/game" class={title == "Game Database" ? "bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium" : "text-gray-900 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium dark:text-white dark:hover:bg-gray-600 dark:hover:text-gray-200"}>Game Database</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="sm:hidden hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a href="/" class={title == "Home" ? "bg-gray-900 text-white block px-3 py-2 rounded-md text-base font-medium" : "text-gray-900 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium dark:text-white dark:hover:bg-gray-600 dark:hover:text-gray-200"}>Home</a>
      <a href="/pr" class={title == "Power Rankings" ? "bg-gray-900 text-white block px-3 py-2 rounded-md text-base font-medium" : "text-gray-900 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium dark:text-white dark:hover:bg-gray-600 dark:hover:text-gray-200"}>Power Rankings</a>
      <a href="/player" class={title == "eSports Database" ? "bg-gray-900 text-white block px-3 py-2 rounded-md text-base font-medium" : "text-gray-900 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium dark:text-white dark:hover:bg-gray-600 dark:hover:text-gray-200"}>Player Database</a>
      <a href="/game" class={title == "Game Database" ? "bg-gray-900 text-white block px-3 py-2 rounded-md text-base font-medium" : "text-gray-900 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium dark:text-white dark:hover:bg-gray-600 dark:hover:text-gray-200"}>Game Database</a>
    </div>
  </div>
</nav>
<body class="bg-gray-100 dark:bg-slate-950">
  <div class="bg-gray-100 dark:bg-slate-950">
    <slot />
  </div>
  <script>
    document.getElementById('hamburger-button').addEventListener('click', function() {
      var menu = document.getElementById('mobile-menu');
      if (menu.classList.contains('hidden')) {
        menu.classList.remove('hidden');
      } else {
        menu.classList.add('hidden');
      }
    });
  </script>
</body>
</html>
