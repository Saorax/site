---
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<li>
  <div class="px-6 py-4">
    <h2 class="text-xl font-bold text-gray-800 dark:text-white">
      {title}
    </h2>
    <div class="flex flex-col mt-2 text-gray-600 dark:text-gray-300">
      <slot />
    </div>
  </div>
</li>
